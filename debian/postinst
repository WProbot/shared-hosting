#!/bin/sh
# postinst script for shared-hosting
#
# see: dh_installdeb(1)

set -e

# Load the `debconf` library functions
. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Process the dbconfig-common hook
if [ -f /usr/share/dbconfig-common/dpkg/postinst.mysql ]; then
  . /usr/share/dbconfig-common/dpkg/postinst.mysql
  dbc_generate_include_owner="root:root"
  dbc_generate_include_perms="0640"
  dbc_generate_include="php:/etc/shared-hosting/config-db.php"
  dbc_mysql_createdb_encoding="utf8mb4"
  dbc_sql_substitutions="1"
  dbc_go shared-hosting "$@"
fi

case "$1" in
  configure)
    # Fetch the required varables from debhelper's database
    db_get shared-hosting/force-group
    WEB_GROUP="$RET"
    # Update the shared-hosting configuration file with the new values
    echo "Writing configuration file ..."
    jq -Mnr '{ "group": $group }' --arg "group" "$WEB_GROUP" \
      > /etc/shared-hosting/config.json
    # Update the composer dependencies for this project
    echo "Updating composer packages ..."
    cd /usr/share/shared-hosting && composer --quiet update
    # Flush any updated configuration files to disk
    echo "Flusing account/site configuration to disk ..."
    flush-config --quiet
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
