#!/bin/sh
# postinst script for shared-hosting
#
# see: dh_installdeb(1)

set -e

# Load the `debconf` library functions
. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if [ ! -f /usr/share/shared-hosting/config.json ]; then
                cp /usr/share/shared-hosting/config.example.json \
                   /usr/share/shared-hosting/config.json
        fi
        db_get shared-hosting/email
        EMAIL="$RET"
        db_get shared-hosting/mysql-password
        MY_PWD="$RET"
        TMP_CONFIG="$(mktemp)"
        jq -Mr '.email = "'"$EMAIL"'"' \
                /usr/share/shared-hosting/config.json  > \
                "$TMP_CONFIG" 2> /dev/null
        jq -Mr '.password = "'"$MY_PWD"'"' \
                "$TMP_CONFIG"  > \
                /usr/share/shared-hosting/config.json 2> /dev/null
        rm -f "$TMP_CONFIG"
        cd /usr/share/shared-hosting && composer --quiet update
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
