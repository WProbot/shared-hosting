#!/bin/sh
# postinst script for shared-hosting
#
# see: dh_installdeb(1)

set -e

# Load the `debconf` library functions
. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
  configure)
    # Fetch the required varables from debhelper's database
    db_get shared-hosting/email
    EMAIL="$RET"
    db_get shared-hosting/mysql-password
    MY_PWD="$RET"
    db_get shared-hosting/force-group
    WEB_GROUP="$RET"
    # Update the shared-hosting configuration file with the new values
    jq -Mnr '{ "email": $email, "group": $group, "password": $password }' \
      --arg "email"    "$EMAIL" \
      --arg "group"    "$WEB_GROUP" \
      --arg "password" "$MY_PWD" \
      > /etc/shared-hosting/config.json
    # Update the composer dependencies for this project
    cd /usr/share/shared-hosting && composer --quiet update
    # Divert to our own config over OpenDKIM's default
    dpkg-divert --add --package shared-hosting --rename --divert \
      /etc/default/opendkim.dpkg-divert /etc/default/opendkim
    if [ ! -e /etc/default/opendkim ] || [ -L /etc/default/opendkim ]; then
      ln -sf /usr/share/shared-hosting/opendkim.def /etc/default/opendkim ; fi
    dpkg-divert --add --package shared-hosting --rename --divert \
      /etc/opendkim.conf.dpkg-divert /etc/opendkim.conf && \
    if [ ! -e /etc/opendkim.conf    ] || [ -L /etc/opendkim.conf    ]; then
      ln -sf /usr/share/shared-hosting/opendkim.cnf /etc/opendkim.conf    ; fi
    # Flush any updated configuration files to disk
    flush-config --quiet
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
